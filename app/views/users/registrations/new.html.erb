<div class="container">
  <div class="d-flex justify-content-center align-center">
    <div class="ml-4 mb-4">
      <div class="card">
        <div class="card-body">
          <div class="row">
            <div class="col-md-12">
              <div class="form-group">

                <%= form_for(resource, as: resource_name, url: registration_path(resource_name), class: 'signup') do |f| %>
                  <%= render "devise/shared/error_messages", resource: resource %>

                  <div class="form-group">
                    <br />
                    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email Address", class: 'form-control'  %>
                  </div>

                  <div class="form-group">
                    <% if @minimum_password_length %>
                    <em>(<%= @minimum_password_length %> characters minimum)</em>
                    <% end %><br />
                    <%= f.password_field :password, autocomplete: "new-password", placeholder: 'Password', class: 'form-control' %>
                  </div>

                  <div class="form-group">
                    <% if @minimum_password_length %>
                    <em>(<%= @minimum_password_length %> characters minimum)</em>
                    <% end %><br />
                    <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: 'Password Confirmation', class: 'form-control' %>
                  </div>

                  <div class="form-group text-center">
                    <%= f.submit "SIGN UP", class: 'btn btn-success' %>
                  </div>
                <% end %>

              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
