<div class="container">
  <div class="d-flex justify-content-center align-center">
    <div class="ml-4 mb-4">
      <div class="card">
        <div class="card-body">
          <div class="row">
            <div class="col-md-12">
              <div class="form-group">

                <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: 'signin') do |f| %>
                  <div class="form-group">
                    <br />
                    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email Address", class: 'form-control'  %>
                  </div>

                  <div class="form-group">
                    <%= f.password_field :password, autocomplete: "current-password", placeholder: 'Password', class: 'form-control' %>
                  </div>

                  <% if devise_mapping.rememberable? %>
                    <div class="field">
                      <%= f.check_box :remember_me %>
                      <%= f.label :remember_me %>
                    </div>
                  <% end %>

                  <div class="form-group text-center">
                    <%= f.submit "SIGN IN", class: 'btn btn-success' %>
                  </div>
                <% end %>

              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
